<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#51829B"
        android:fontFamily="@font/archivo_black"
        android:gravity="center"
        android:text="Cashier"
        android:textColor="@color/white"
        android:textSize="35dp" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="34dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40dp"
        android:background="#ADC4CE"
        android:fontFamily="@font/amaranth"
        android:gravity="bottom|center|left"
        android:text="Nama Pembeli"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/Nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:hint="Nama"/>

    <TextView
        android:text="Daftar Album"
        android:layout_width="122dp"
        android:layout_height="34dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="#ADC4CE"
        android:fontFamily="@font/amaranth"
        android:gravity="bottom|center|left"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/album1"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginLeft="163dp"
        android:layout_marginTop="-100dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/album2" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-100dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:src="@drawable/album3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/amaranth_bold"
        android:gravity="bottom|center|left"
        android:text="Fallen Misfit"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/amaranth_bold"
        android:gravity="center"
        android:text="Rp 250.000 "
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginLeft="173dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="-60dp"
        android:fontFamily="@font/amaranth_bold"
        android:gravity="bottom|center|left"
        android:text="Fade Mono"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginLeft="170dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/amaranth_bold"
        android:gravity="center"
        android:text="Rp 240.000 "
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginLeft="310dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="-60dp"
        android:fontFamily="@font/amaranth_bold"
        android:gravity="bottom|center|left"
        android:text="Fight FML"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginLeft="305dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/amaranth_bold"
        android:gravity="center"
        android:text="Rp 270.000 "
        android:textSize="15dp" />

    <EditText
        android:id="@+id/Nol1"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="25dp"
        android:hint="0"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/Nol2"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="-50dp"
        android:hint="0"
        android:layout_gravity="center"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/Nol3"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="-50dp"
        android:hint="0"
        android:layout_gravity="center"
        android:textSize="15dp" />

    <TextView
        android:text="Member"
        android:layout_width="78dp"
        android:layout_height="34dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:background="#ADC4CE"
        android:fontFamily="@font/amaranth"
        android:gravity="bottom|center|left"
        android:textSize="20dp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rbGold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/amaranth_bold"
                android:text="Gold"/>

            <RadioButton
                android:id="@+id/rbSilver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/amaranth_bold"
                android:text="Silver" />

            <RadioButton
                android:id="@+id/rbReguler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/amaranth_bold"
                android:text="Reguler" />

        </RadioGroup>

    </LinearLayout>


    <Button
        android:id="@+id/Bayar"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:background="#51829B"
        android:gravity="center"
        android:text="BAYAR"
        android:textColor="@color/white"
        android:fontFamily="@font/archivo_black"
        android:textSize="20dp" />

</LinearLayout>
